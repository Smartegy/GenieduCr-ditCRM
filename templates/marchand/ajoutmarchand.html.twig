                                <!--begin::Title-->
                                <h1 class="d-flex align-items-center text-dark fw-bolder fs-3 my-1">{{page_title}}</h1>
                                <!--end::Title-->
                                <!--begin::Separator-->
                                <span class="h-20px border-gray-300 border-start mx-4"></span>
                                <!--end::Separator-->
                                <!--begin::Breadcrumb-->
                                <ul class="breadcrumb breadcrumb-separatorless fw-bold fs-7 my-1">
                                    <!--begin::Item-->
                                    <li class="breadcrumb-item text-muted">
                                        <a href="{{ path('index')}}" class="text-muted text-hover-primary">Accueil</a>
                                    </li>
                                    <!--end::Item-->
                                    <!--begin::Item-->
                                    <li class="breadcrumb-item">
                                        <span class="bullet bg-gray-300 w-5px h-2px"></span>
                                    </li>
                                    <!--end::Item-->
                                    <!--begin::Item-->
                                    <li class="breadcrumb-item text-muted">{{P_page_title}}</li>
                                    <!--end::Item-->
                                    <!--begin::Item-->
                                    <li class="breadcrumb-item">
                                        <span class="bullet bg-gray-300 w-5px h-2px"></span>
                                    </li>
                                    <!--end::Item-->
                                    <!--begin::Item-->
                                    <li class="breadcrumb-item text-dark">{{ page_title }}</li>
                                    <!--end::Item-->
                                </ul>
                                <!--end::Breadcrumb-->
                            </div>
                            <!--end::Page title-->
                            <!--begin::Actions-->
                            <div class="d-flex align-items-center py-1">
                                <!--begin::Wrapper-->

                                <!--end::Wrapper-->
                                <!--begin::Button-->

                                <!--end::Button-->
                            </div>
                            <!--end::Actions-->
                        </div>
                        <!--end::Container-->
                    </div>
                    <!--end::Toolbar-->
                    <!--begin::Post-->
                    <div class="post d-flex flex-column-fluid" id="kt_post">
                        <!--begin::Container-->
                        <div id="kt_content_container" class="container-xxl">

                            <!--begin::Basic info-->
                            <div class="card mb-5 mb-xl-10">
                                <div class="card-header border-0 cursor-pointer" role="button" data-bs-toggle="collapse" data-bs-target="#kt_account_profile_details" aria-expanded="true" aria-controls="kt_account_profile_details">
                                    <!--begin::Card title-->
                                    <div class="card-title m-0">
                                       <!-- <h3 class="fw-bolder m-0">Ajout Marchand</h3>-->
                                    </div>
                                    <!--end::Card title-->
                                </div>
                                <!--begin::Card title-->

                                <!--end::Card title-->

                                <div id="kt_account_settings_profile_details" class="collapse show">
                                    <div id="kt_account_settings_profile_details" class="collapse show">
                                        {{ form_start(form, {'attr': {'class': 'form fv-plugins-bootstrap5 fv-plugins-framework'}}) }}

                                        <div class="row mb-6">
                                            <div class="col-lg-8 fv-row fv-plugins-icon-container">
                                                {{ form_widget(form.concessionnairemarchand.actif, {'attr': {'class': 'checkbox-switch'}}) }}
                                            </div>
                    
                                            {{ form_label(form.concessionnairemarchand.actif, "Actif :", {'label_attr': {'class':"col-lg-4 col-form-label required fw-bold fs-6"}}) }}
                    
                    
                                        </div>

                                        <div class="row mb-6">

                                            {{ form_label(form.concessionnairemarchand.utilisateur.nom, "Nom :", {'label_attr': {'class':"col-lg-4 col-form-label required fw-bold fs-6"}}) }}

                                            <div class="col-lg-8 fv-row fv-plugins-icon-container">
                                                {{ form_widget(form.concessionnairemarchand.utilisateur.nom, {'attr': {'class': 'form-control form-control-lg form-control-solid'}}) }}
                                            </div>
                                        </div>

                                        <div class="row mb-6">

                                            {{ form_label(form.concessionnairemarchand.utilisateur.nomutilisateur, "Nom Utilisateur :", {'label_attr': {'class':"col-lg-4 col-form-label required fw-bold fs-6"}}) }}

                                            <div class="col-lg-8 fv-row fv-plugins-icon-container">
                                                {{ form_widget(form.concessionnairemarchand.utilisateur.nomutilisateur, {'attr': {'class': 'form-control form-control-lg form-control-solid'}}) }}
                                            </div>
                                        </div>

                                        <div class="row mb-6">

                                            {{ form_label(form.concessionnairemarchand.utilisateur.password, "Mot de Passe :", {'label_attr': {'class':"col-lg-4 col-form-label required fw-bold fs-6"}}) }}

                                            <div class="col-lg-8 fv-row fv-plugins-icon-container">
                                                {{ form_widget(form.concessionnairemarchand.utilisateur.password, {'attr': {'class': 'form-control form-control-lg form-control-solid'}}) }}
                                            </div>
                                        </div>

                                        <div class="row mb-6">

                                            {{ form_label(form.concessionnairemarchand.description, "Description  :", {'label_attr': {'class':"col-lg-4 col-form-label required fw-bold fs-6"}}) }}

                                            <div class="col-lg-8 fv-row fv-plugins-icon-container">
                                                {{ form_widget(form.concessionnairemarchand.description, {'attr': {'class': 'form-control form-control-lg form-control-solid'}}) }}
                                            </div>
                                        </div>

                                        <div class="row mb-6">

                                            {{ form_label(form.concessionnairemarchand.utilisateur.courriel, "Courriel :", {'label_attr': {'class':"col-lg-4 col-form-label required fw-bold fs-6"}}) }}

                                            <div class="col-lg-8 fv-row fv-plugins-icon-container">
                                                {{ form_widget(form.concessionnairemarchand.utilisateur.courriel, {'attr': {'class': 'form-control form-control-lg form-control-solid'}}) }}
                                            </div>
                                        </div>

                                        <div class="row mb-6">

                                            {{ form_label(form.concessionnairemarchand.utilisateur.telephone, "TÃ©lephone :", {'label_attr': {'class':"col-lg-4 col-form-label required fw-bold fs-6"}}) }}

                                            <div class="col-lg-8 fv-row fv-plugins-icon-container">
                                                {{ form_widget(form.concessionnairemarchand.utilisateur.telephone, {'attr': {'class': 'form-control form-control-lg form-control-solid'}}) }}
                                            </div>
                                        </div>

                                        <div class="row mb-6">

                                            {{ form_label(form.concessionnairemarchand.siteweb, "Siteweb :", {'label_attr': {'class':"col-lg-4 col-form-label required fw-bold fs-6"}}) }}

                                            <div class="col-lg-8 fv-row fv-plugins-icon-container">
                                                {{ form_widget(form.concessionnairemarchand.siteweb, {'attr': {'class': 'form-control form-control-lg form-control-solid'}}) }}
                                            </div>
                                        </div>
                                        <div class="row mb-6">

                                            {{ form_label(form.concessionnairemarchand.vendeurs, "Vendeurs :", {'label_attr': {'class':"col-lg-4 col-form-label required fw-bold fs-6"}}) }}

                                            <div class="col-lg-6">
                                                {{ form_widget(form.concessionnairemarchand.vendeurs) }}
                                            </div>
                                        </div>
                                        <div class="row mb-6">

                                            {{ form_label(form.concessionnairemarchand.agents, "Agents :", {'label_attr': {'class':"col-lg-4 col-form-label required fw-bold fs-6"}}) }}

                                            <div class="col-lg-6">
                                                {{ form_widget(form.concessionnairemarchand.agents) }}
                                            </div>
                                        </div>
                                        <div class="row mb-6">

                                            {{ form_label(form.concessionnairemarchand.liendealertrack, "Lien dealer track :", {'label_attr': {'class':"col-lg-4 col-form-label required fw-bold fs-6"}}) }}

                                            <div class="col-lg-8 fv-row fv-plugins-icon-container">
                                                {{ form_widget(form.concessionnairemarchand.liendealertrack, {'attr': {'class': 'form-control form-control-lg form-control-solid'}}) }}
                                            </div>
                                        </div>

                                        <div class="row mb-6">
                                          {{ form_label(form.concessionnairemarchand.media, "Logo :", {'label_attr': {'class':"col-lg-4 col-form-label required fw-bold fs-6"}}) }}

                                            <div class="col-lg-8 fv-row fv-plugins-icon-container">
                              
                                            {{ form_widget(form.concessionnairemarchand.media)}}
                                            </div>
                                            <div class="row padding-1">
                                                {%for fabNom in form.concessionnairemarchand.fabriquants %}
                                                    <div class="img_checkbox col-lg-4  col-sm-4">

                                                        {{form_row(fabNom)}}{#pour rendre le input  checkbox#}

                                                        {# Ici pour chaque choix on recupere l'id puis on avec l'id on recupere le liens du logo #}
                                                        {# #}
                                                        <img src="{{asset(listeLogo[fabNom.vars.name])}}" />{# pour connaitre les variables disponible#}

                                                    </div>
                                                {%endfor%}
                                            </div>


                                            <div class="card-footer d-flex justify-content-end py-6 px-9">
                                                <button type="reset" class="btn btn-light btn-active-light-primary me-2"><a href="{{path("marchand")}}"> Annuler</a></button>
                                                <button type="submit" class="btn btn-primary" id="kt_account_profile_details_submit">Ajouter</button>
                                            </div>

                                            {# Fermeture de la balise <form> du formulaire HTML #}
                                            {{ form_end(form) }}
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <!--end::Basic info-->

                        </div>
                        <!--end::Container-->
                    </div>
                    <!--end::Post-->
                </div>
                <!--end::Content-->
           
           
            </div>
            <!--end::Wrapper-->
        </div>
        <!--end::Page-->
    </div>
